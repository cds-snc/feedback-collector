{% extends "base.njk" %}

{% block content %}

    <h1>{{ __('personal.title') }}</h1>

    <div>
        <p>{{ __('personal.intro') }}</p>
    </div>
    <form method="post" action="http://localhost:3000/en/send?id=ff23b526-75b4-4a48-b356-6366335b9aa0">
        <input type="hidden" name="_csrf" value="{{ csrfToken }}">

        {{ textInput('fullname', 'form.fullname', { class: "w-3-4" }) }}

        {{ textInput('email', 'form.email') }}

        {{ textInput('expiry', 'form.expiry', { hint: 'form.expiry.desc' }) }}

        {{ formButtons() }}
    </form>

{% endblock %}